<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:titleTextColor="@color/black">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:text="Input"
            android:textColor="@color/primary"
            android:textSize="20dp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Info"
                android:textColor="@color/primary"
                android:textColorHighlight="@color/primary_op"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="25dp"
                app:cardBackgroundColor="#F4F8FB"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="Type of Fish"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_fish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:ems="10"
                        android:fontFamily="@font/poppins"
                        android:hint="Type of Fish"
                        android:inputType="textPersonName"
                        android:maxLength="32"
                        android:theme="@style/EditTextTheme"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="Date"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:ems="10"
                        android:fontFamily="@font/poppins"
                        android:hint="Click to choose date"
                        android:inputType="date"
                        android:maxLength="10"
                        android:minHeight="48dp"
                        android:theme="@style/EditTextTheme"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:fontFamily="@font/poppins"
                                android:text="Length (cm)"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Weight (kg)"
                                android:textSize="14sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/edit_length"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:ems="10"
                                android:fontFamily="@font/poppins"
                                android:hint="Length"
                                android:inputType="number|numberDecimal"
                                android:maxLength="10"
                                android:theme="@style/EditTextTheme"
                                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                            <EditText
                                android:id="@+id/edit_weight"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:fontFamily="@font/poppins"
                                android:hint="Weight"
                                android:inputType="number|numberDecimal"
                                android:theme="@style/EditTextTheme"
                                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                                android:maxLength="10" />
                        </TableRow>

                    </TableLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="Location"
                        android:textSize="14sp" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/text_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_weight="1"
                                android:text="(Click the button to get location)"
                                android:textAlignment="center" />

                            <ImageButton
                                android:id="@+id/imgbtn_getloc"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/imgbtn"
                                android:minWidth="48dp"
                                android:minHeight="48dp"
                                android:padding="12dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_location"
                                tools:ignore="SpeakableTextPresentCheck" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Image"
                android:textColor="@color/primary"
                android:textColorHighlight="@color/primary_op"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imgbtn_upload"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="#ffffffff"
                android:scaleType="fitCenter"
                android:scaleY="1"
                app:srcCompat="@drawable/ic_photo_add"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#EBF6FB"
                    android:text="Cancel"
                    android:textColor="@color/primary" />

                <Button
                    android:id="@+id/button_done"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Done"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>